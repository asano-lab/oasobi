
MODULE main

VAR
    b0 : flower_dummy;
    b1 : flower(b0, b2);
    b2 : flower(b1, b0);

ASSIGN
    init(b1.bloom) := 1;
    init(b2.bloom) := 0;

LTLSPEC !F (b2.bloom = 1);

MODULE flower(left, right)
VAR
    bloom: {0, 1};
DEFINE
    neighbor := left.bloom + bloom + right.bloom;
ASSIGN
    next(bloom) := case
        neighbor = 0 : 0;
        neighbor = 1 : 1;
        neighbor = 2 : {0, 1};
        neighbor = 3 : 0;
    esac;

MODULE flower_dummy
VAR 
    bloom: {0, 1};
ASSIGN
    init(bloom) := 0;
